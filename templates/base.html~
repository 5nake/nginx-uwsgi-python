					<a href="/reg/" class="btn btn-success">Sign In</a>
				</form>
			</div>
			<script>
			$(document).ready (function(){
				$('form#first_form').on('submit', function() {
				var email = $("#email").val();
				var password = $("#password").val();
				$.post("/auth/", { email: email, password: password },
					function(data){
    				if (data.status === "ok") {
						window.location.reload()
					} else {
						alert(data.error)
					}}, "json");
				return false;
				});
					});
			</script>
