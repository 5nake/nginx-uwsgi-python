			<script>
			$(document).ready (function(){
				$('#logout').click(function() {
				$.get("/logout/",
					function(data){
						window.location.reload()
				});
				return false;
				});
					});
			</script>
		{% else %}
			<div id="navbar" class="navbar-collapse collapse">
				<form id="first_form" class="navbar-form navbar-right" method="POST">
				<div class="form-group">
					<input type="email" size=10 placeholder="Email" class="form-control" name="email" id="email" required>
        		</div>
        		<div class="form-group">
           			<input type="password" size=10 placeholder="Password" class="form-control" name="password" id="password" required> 
        		</div>
